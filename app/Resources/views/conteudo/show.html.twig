{% extends 'painel.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>Conteudo</h1>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">Visualizando Conteudo</div>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ conteudo.id }}</td>
                </tr>
                <tr>
                    <th>Titulo</th>
                    <td>{{ conteudo.titulo }}</td>
                </tr>
                <tr>
                    <th>Conteudo</th>
                    <td>{{ conteudo.conteudo|raw }}</td>
                </tr>
                <tr>
                    <th>Ativo</th>
                    <td>{% if conteudo.ativo %}Yes{% else %}No{% endif %}</td>
                </tr>
                <tr>
                    <th>Data</th>
                    <td>{{ conteudo.data|date('Y-m-d H:i:s') }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <ul class="acoes">
        <li>
            <a href="{{ path('painel_conteudo_index') }}" class="btn btn-primary">Voltar</a>
        </li>
        <li>
            <a href="{{ path('painel_conteudo_edit', { 'id': conteudo.id }) }}" class="btn btn-success">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Excluir"  class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
