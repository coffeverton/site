{% extends 'painel.html.twig' %}
{% form_theme form 'form/fields.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>Conteudo</h1>
    </div>
    <div class="panel panel-default formulario">
        <div class="panel-heading">Cadastrando Conteudo</div>
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <input type="submit" value="Salvar" class="btn btn-primary" />
        {{ form_end(form) }}
    </div>

    <ul class="acoes">
        <li>
            <a href="{{ path('painel_conteudo_index') }}" class="btn btn-primary">Voltar</a>
        </li>
    </ul>
{% endblock %}
{% block javascripts %}
<script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
<script>
tinymce.init({
    selector: 'textarea',
    height: 500,
    width: 650,
    min_width: 650,
    max_width: 650,
    theme: 'modern',
    plugins: [
      'advlist autolink lists link image charmap print preview hr anchor pagebreak',
      'searchreplace wordcount visualblocks visualchars code fullscreen',
      'insertdatetime media nonbreaking save table contextmenu directionality',
      'emoticons template paste textcolor colorpicker textpattern imagetools'
    ],
    toolbar1: 'undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
    toolbar2: 'print preview media | forecolor backcolor emoticons',
    image_advtab: true,
    content_css : "{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css')}},{{ asset('assets/vendor/everton/tinymce.css') }}" 
 });
 
 $(function(){
    $('#conteudo_titulo').change(function(){
        var titulo = $(this).val().toLowerCase();
        $('#conteudo_chave').val(titulo);
    });
 });
</script>
{% endblock %}