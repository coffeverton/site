{% extends 'painel.html.twig' %}
{% form_theme edit_form 'form/fields.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>Conteudo</h1>
    </div>
    
    <div class="panel panel-default formulario">
        <div class="panel-heading">Editando Conteudo</div>
        {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <p>
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </p>
            <a href="{{asset('uploads/arquivos/')}}{{arquivo.src}}" target="_blank">
                <img class="img_miniatura" src="{{asset('uploads/arquivos/')}}{{arquivo.src}}" />
            </a>
        {{ form_end(edit_form) }}
    </div>
    <ul class="acoes">
        <li>
            <a href="{{ path('painel_conteudo_index') }}" class="btn btn-primary">Voltar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Excluir"  class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
