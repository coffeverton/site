{% extends 'painel.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>Conteudo</h1>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">Visualizando Categoria</div>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ categorium.id }}</td>
                </tr>
                <tr>
                    <th>Nome</th>
                    <td>{{ categorium.nome }}</td>
                </tr>
                <tr>
                    <th>Chave</th>
                    <td>{{ categorium.chave }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <ul class="acoes">
        <li>
            <a href="{{ path('painel_categoria_index') }}" class="btn btn-primary">Voltar</a>
        </li>
        <li>
            <a href="{{ path('painel_categoria_edit', { 'id': categorium.id }) }}" class="btn btn-success">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Excluir"  class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
